<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.ui.song.SongFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_allsong"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_btn_add_baihat_userplaylist"/>


    <RelativeLayout
        android:id="@+id/relative_btn_add_baihat_userplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/relative_img_add_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="#C3D5E4">

                <ImageButton
                    android:id="@+id/imageaddbtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/noname"
                    android:scaleType="fitXY"
                    android:src="@drawable/add" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_add_user_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/relative_img_add_playlist"
            android:text="Thêm Bài Hát"
            android:textColor="#022222"
            android:textSize="18dp" />

    </RelativeLayout>

    <TextView

            android:id="@+id/textviewkhongcodulieu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Không Có Kết Quả"

            android:textColor="@color/black"
            android:textSize="35sp"
            android:visibility="gone" />



</RelativeLayout>
