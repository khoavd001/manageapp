<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relavtive_songsinger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:layout_marginVertical="10dp">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_all_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp">
            <ImageView
                android:id="@+id/img_songsinger"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:id="@+id/idbaihatsongsinger" />
        <TextView
            android:id="@+id/txt_songname_songsinger"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cardview_all_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_singername_songsinger"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/cardview_all_song"
            android:layout_below="@id/txt_songname_songsinger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/deletebtnsongsinger"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_below="@+id/txt_songname_songsinger"
            android:layout_toRightOf="@+id/txt_singername_songsinger"
            android:background="@color/cardview_light_background"

            android:src="@drawable/ic_plus"
            tools:src="@drawable/ic_plus" />

    </RelativeLayout>
</RelativeLayout>