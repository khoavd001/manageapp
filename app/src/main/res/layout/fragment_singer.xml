<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customactivity"
    tools:context=".Activity.ui.singer.SingerFragment">

    <Button
        android:id="@+id/addsingerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm ca sĩ"
        android:textSize="20dp"
        app:backgroundTint="@color/button" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rc_allsinger"
        android:layout_below="@+id/addsingerbtn"/>
    <TextView

        android:visibility="gone"
        android:textColor="@color/black"
        android:text="Không Có Kết Quả"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_centerInParent="true"

        android:id="@+id/textviewkhongcodulieusinger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</RelativeLayout>